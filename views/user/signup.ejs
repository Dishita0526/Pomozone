<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign up - Pomozone</title>
  <link rel="stylesheet" href="/css/register.css"> 
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  
  <div class="overlay-container">
    <div class="overlay-background"></div> 
    <div class="overlay-form"></div> 

    <div class="form-container">
      <form action="/signup" method="POST" class="form">
        <h1 class="title">Join <span class="highlight">Pomozone</span> circle</h1>

       
        <input 
          type="text" 
          name="username" 
          placeholder="Enter your username" 
          required 
          class="input-field"
        />

       
        <input 
          type="password" 
          name="password" 
          placeholder="Create a strong password" 
          required 
          class="input-field"
        />

        <% if (typeof error !== 'undefined') { %>
           <div class="error"><%= error %></div>
            <% } %>
       
        <button 
          type="submit" 
          class="submit-button"
        >
          Sign up
        </button>

    
        <p class="login-link">
          Already have an account? 
          <a href="/signin" class="login-link-text">Sign in here</a>
        </p>
      </form>
    </div>
  </div>


  <script>
    document.querySelector('.submit-button').addEventListener('click', function(e) {
      const confirmation = confirm('Are you sure about your password?');
      if (!confirmation) {
        e.preventDefault();
      }
    });
  </script>
</body>
</html>
